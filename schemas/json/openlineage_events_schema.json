{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Marimo OpenLineage Event Schema",
  "description": "Schema for OpenLineage compliant data lineage events generated by Marimo notebooks",
  "type": "object",
  "required": [
    "eventType",
    "eventTime", 
    "run",
    "job",
    "inputs",
    "outputs",
    "producer",
    "schemaURL",
    "session_id",
    "emitted_at"
  ],
  "properties": {
    "eventType": {
      "type": "string",
      "description": "OpenLineage event type indicating lifecycle stage",
      "enum": ["START", "COMPLETE", "ABORT", "FAIL"]
    },
    "eventTime": {
      "type": "string",
      "description": "ISO 8601 timestamp when the tracked operation occurred",
      "format": "date-time"
    },
    "run": {
      "type": "object",
      "description": "Information about the specific run/execution",
      "required": ["runId"],
      "properties": {
        "runId": {
          "type": "string",
          "description": "Unique identifier for this run",
          "format": "uuid"
        },
        "facets": {
          "type": "object", 
          "description": "Additional metadata facets for the run",
          "properties": {
            "marimoExecution": {
              "$ref": "#/definitions/marimoExecutionFacet"
            },
            "performance": {
              "$ref": "#/definitions/performanceFacet"
            }
          },
          "additionalProperties": true
        }
      },
      "additionalProperties": false
    },
    "job": {
      "type": "object",
      "description": "Information about the job/operation being tracked",
      "required": ["namespace", "name"],
      "properties": {
        "namespace": {
          "type": "string",
          "description": "Namespace for the job, typically 'marimo'"
        },
        "name": {
          "type": "string", 
          "description": "Name of the operation (e.g., 'pandas_read_csv', 'dataframe_head')"
        },
        "facets": {
          "type": "object",
          "description": "Additional metadata facets for the job",
          "additionalProperties": true
        }
      },
      "additionalProperties": false
    },
    "inputs": {
      "type": "array",
      "description": "Array of input datasets",
      "items": {
        "$ref": "#/definitions/dataset"
      }
    },
    "outputs": {
      "type": "array", 
      "description": "Array of output datasets",
      "items": {
        "$ref": "#/definitions/dataset"
      }
    },
    "producer": {
      "type": "string",
      "description": "Identifier of the system producing these events",
      "const": "marimo-lineage-tracker"
    },
    "schemaURL": {
      "type": "string",
      "description": "URL to the OpenLineage schema specification",
      "format": "uri"
    },
    "session_id": {
      "type": "string",
      "description": "Unique identifier for the notebook session"
    },
    "emitted_at": {
      "type": "string",
      "description": "ISO 8601 timestamp when the event was emitted",
      "format": "date-time"
    }
  },
  "definitions": {
    "dataset": {
      "type": "object",
      "description": "A dataset with associated metadata facets",
      "required": ["namespace", "name"],
      "properties": {
        "namespace": {
          "type": "string",
          "description": "Namespace for the dataset"
        },
        "name": {
          "type": "string",
          "description": "Name/identifier for the dataset"
        },
        "facets": {
          "type": "object",
          "description": "Metadata facets describing the dataset",
          "properties": {
            "schema": {
              "$ref": "#/definitions/schemaFacet"
            },
            "dataSource": {
              "$ref": "#/definitions/dataSourceFacet"
            },
            "columnMetrics": {
              "$ref": "#/definitions/columnMetricsFacet"
            },
            "columnLineage": {
              "$ref": "#/definitions/columnLineageFacet"
            },
            "version": {
              "$ref": "#/definitions/versionFacet"
            }
          },
          "additionalProperties": true
        }
      },
      "additionalProperties": false
    },
    "schemaFacet": {
      "type": "object",
      "description": "Schema information for a dataset",
      "required": ["_producer", "_schemaURL", "fields"],
      "properties": {
        "_producer": {
          "type": "string",
          "const": "marimo-lineage-tracker"
        },
        "_schemaURL": {
          "type": "string",
          "format": "uri"
        },
        "fields": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "type"],
            "properties": {
              "name": {
                "type": "string",
                "description": "Column/field name"
              },
              "type": {
                "type": "string", 
                "description": "Data type of the field"
              },
              "description": {
                "type": "string",
                "description": "Description of the field"
              }
            },
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    },
    "dataSourceFacet": {
      "type": "object",
      "description": "Information about the data source",
      "required": ["_producer", "_schemaURL", "name", "uri"],
      "properties": {
        "_producer": {
          "type": "string",
          "const": "marimo-lineage-tracker"
        },
        "_schemaURL": {
          "type": "string",
          "format": "uri"
        },
        "name": {
          "type": "string",
          "description": "Name of the data source"
        },
        "uri": {
          "type": "string",
          "description": "URI identifying the data source location"
        }
      },
      "additionalProperties": false
    },
    "columnMetricsFacet": {
      "type": "object",
      "description": "Statistical metrics for dataset columns",
      "required": ["_producer", "_schemaURL", "columnMetrics"],
      "properties": {
        "_producer": {
          "type": "string",
          "const": "marimo-lineage-tracker"
        },
        "_schemaURL": {
          "type": "string",
          "format": "uri"
        },
        "columnMetrics": {
          "type": "object",
          "patternProperties": {
            ".*": {
              "type": "object",
              "description": "Metrics for a specific column",
              "properties": {
                "nullCount": {
                  "type": ["integer", "null"],
                  "description": "Number of null values"
                },
                "distinctCount": {
                  "type": ["integer", "null"],
                  "description": "Number of distinct values"
                },
                "min": {
                  "type": ["number", "null"],
                  "description": "Minimum value"
                },
                "max": {
                  "type": ["number", "null"], 
                  "description": "Maximum value"
                }
              },
              "additionalProperties": false
            }
          }
        }
      },
      "additionalProperties": false
    },
    "columnLineageFacet": {
      "type": "object",
      "description": "Column-level lineage showing data flow relationships",
      "required": ["_producer", "_schemaURL", "fields"],
      "properties": {
        "_producer": {
          "type": "string",
          "const": "marimo-lineage-tracker"
        },
        "_schemaURL": {
          "type": "string",
          "format": "uri"
        },
        "fields": {
          "type": "object",
          "patternProperties": {
            ".*": {
              "type": "object",
              "description": "Lineage information for a specific field",
              "required": ["inputFields"],
              "properties": {
                "inputFields": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "required": ["namespace", "name", "field"],
                    "properties": {
                      "namespace": {
                        "type": "string",
                        "description": "Namespace of the source dataset"
                      },
                      "name": {
                        "type": "string",
                        "description": "Name of the source dataset"
                      },
                      "field": {
                        "type": "string", 
                        "description": "Name of the source field"
                      }
                    },
                    "additionalProperties": false
                  }
                }
              },
              "additionalProperties": false
            }
          }
        }
      },
      "additionalProperties": false
    },
    "versionFacet": {
      "type": "object",
      "description": "Version information for a dataset",
      "required": ["_producer", "_schemaURL", "datasetVersion"],
      "properties": {
        "_producer": {
          "type": "string",
          "const": "marimo-lineage-tracker"
        },
        "_schemaURL": {
          "type": "string",
          "format": "uri"
        },
        "datasetVersion": {
          "type": "string",
          "description": "Hash or version identifier for the dataset"
        }
      },
      "additionalProperties": false
    },
    "marimoExecutionFacet": {
      "type": "object",
      "description": "Marimo-specific execution context information",
      "required": ["_producer", "executionId", "sessionId"],
      "properties": {
        "_producer": {
          "type": "string",
          "const": "marimo-lineage-tracker"
        },
        "executionId": {
          "type": "string",
          "description": "Marimo execution identifier"
        },
        "sessionId": {
          "type": "string",
          "description": "Marimo session identifier"
        }
      },
      "additionalProperties": false
    },
    "performanceFacet": {
      "type": "object",
      "description": "Performance metrics for the operation",
      "required": ["_producer", "durationMs"],
      "properties": {
        "_producer": {
          "type": "string",
          "const": "marimo-lineage-tracker"
        },
        "durationMs": {
          "type": "number",
          "description": "Duration of the operation in milliseconds",
          "minimum": 0
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
} 